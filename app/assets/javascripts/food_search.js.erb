$(function(){

if (($(window).width() < 415) && ($('.food-list-item').length > 15)) {

$('.header-wrapper').data('size','big');

$(window).scroll(function(){
    if($(document).scrollTop() > 40)
    {
        if($('.header-wrapper').data('size') == 'big')
        {
          shrinkFoodSearch();
        }
    }
    else
    {
        if($('.header-wrapper').data('size') == 'small')
        {
          expandFoodSearch();
        }
      }
    });

    $('.small-search').click(function(event){
      expandFoodSearch();
    });

// The above referred functions are defined below.

    function shrinkFoodSearch() {
      $('.header-wrapper').data('size','small');
      $('.header-wrapper').stop().animate({
          height:'70px'
      },100);
      $('.twitter-typeahead').hide();
      $('.tabs').css('position', 'fixed');
      $('.tabs').css('top', '70px');
      $('.tabs').css('width', '100%');
      $('.tabs').css('margin', 'auto');
      $('.tabs').css('background-color', '#faf9f4');
      $('#nav').hide();
      $('#empty-list').hide();
      $('#missing').hide();
      $('.btn').hide();
      $('.list-wrapper').css('margin-top', '110px');
      $('.small-search').show();
      $('.small-search').css('position', 'fixed');
      $('.small-search').css('top', '10px');
      $('.small-search').css('right', '10px');
      $('img.small-search').css('height', '50px');
    }

    function expandFoodSearch() {
      $('.header-wrapper').data('size','big');
      $('.header-wrapper').stop().animate({
          height:'185px'
      },100);
      $('.twitter-typeahead').show();
      $('#nav').show();
      $('#empty-list').show();
      $('#missing').show();
      $('.btn').show();
      $('.list-wrapper').css('margin-top', '185px');
      $('.tabs').css('position', '');
      $('.tabs').css('top', '');
      $('.small-search').hide();

    }

  }
});
